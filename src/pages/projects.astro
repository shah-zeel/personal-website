  <HorizontalCard
    title="Fundriser"
    img="/project-2.png"
    desc="web3 crowdfunding"
    url="https://devpost.com/software/fundriser"
  />

  <div class="divider my-0"></div>

  <HorizontalCard
    title="Book Master"
    img="/project-3.png"
